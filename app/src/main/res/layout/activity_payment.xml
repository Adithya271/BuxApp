<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homepage.PaymentActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="25dp"
        android:onClick="imgBackToHome4"
        android:background="@drawable/arrow_back"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/TVtitle"
        android:text="Select Payment Method : "
        android:layout_marginTop="70dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_below="@id/TVtitle"
        android:id="@+id/button1"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/my_button_1"
        android:layout_marginLeft="30dp"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/bri" />

        <TextView
            android:id="@+id/TV1"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="9dp"
            android:onClick="TxtBRI"
            android:text="Bank Rakyat Indonesia"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/button1"
        android:id="@+id/button2"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/my_button_1"
        android:layout_marginLeft="30dp"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/bca1" />

        <TextView
            android:id="@+id/TV2"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="9dp"
            android:onClick="TxtBCA"
            android:textColor="@color/black"
            android:text="Bank Central Asia" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/button2"
        android:id="@+id/button3"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/my_button_1"
        android:layout_marginLeft="30dp"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/visa" />

        <TextView
            android:id="@+id/TV3"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="9dp"
            android:onClick="TxtVISA"
            android:textColor="@color/black"
            android:text="VISA" />
    </LinearLayout>


</RelativeLayout>