<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.LoginActivity3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:onClick="imgBackToLogin2"
            android:background="@drawable/arrow_back"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/img" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img1"
        android:layout_width="284dp"
        android:layout_height="235dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:background="@drawable/img3" />

    <TextView
        android:id="@+id/TV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Everything's Up!"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TV2"
        android:layout_width="231dp"
        android:layout_height="50dp"
        android:layout_below="@id/TV1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="You're all set and ready to use Bux. Enjoy our service!"
        android:textAlignment="center" />

    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/TV2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:onClick="btnToHomeActivity"
        android:background="@drawable/my_button_1"
        android:backgroundTint="@color/purple_500"
        android:text="TAKE ME TO BUX"
        android:textColor="@color/white" />

</RelativeLayout>